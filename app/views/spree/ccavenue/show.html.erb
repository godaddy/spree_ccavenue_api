<div id="checkout" data-hook>
  <%= render partial: 'spree/shared/error_messages', locals: { target: @order } %>
  <h3><%= t(:checkout) %></h3>  
  <div class="alpha omega grid_24">
    <div class="<%= css_class_based_on_order_state(@order) %>">
      <div class="clear"></div>
      <div class="checkout_form">
        <%= form_tag @redirect_params[:transaction_url] do %>
          <%= hidden_field_tag 'command',                      'initiateTransaction' %>
          <%= hidden_field_tag 'Instant Gratification',        'Y' %>
          <%= hidden_field_tag 'merchant_id',                  @redirect_params[:merchant_id] %>
          <%= hidden_field_tag 'access_code',                  @redirect_params[:access_code] %>
          <%= hidden_field_tag 'encRequest',                   @redirect_params[:enc_request] %>

          <%= render :partial => 'spree/checkout/confirm' %>
          <p style="margin: 10px 0;"><%= Spree.t('ccavenue.instructional_text') %></p><br/>
        <% end %>
      </div>
    </div>
  </div>
  <div class="clear"></div>
</div>

